<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    //这里是Linearlayout布局的背景颜色
    <solid android:color="#7F736969" />
    //这里是设置边框线的粗细和颜色
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <padding
        android:bottom="1dp"
        android:left="10dp"
        android:right="10dp"
        android:top="1dp" />
    //角的话，里边有参数可以单独设置
    <corners android:radius="10dp" />

</shape>